<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#3949AB"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Clientes.RegistroClientes">

    <EditText
        android:id="@+id/nomCliente"
        android:layout_width="311dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="4dp"
        android:autofillHints="@string/prompt_email"
        android:hint="@string/name"
        android:inputType="textPersonName"
        android:minHeight="40dp"
        android:selectAllOnFocus="true"
        app:layout_constraintBottom_toTopOf="@+id/apeCliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <Button
        android:id="@+id/btnRegCliente"
        android:layout_width="164dp"
        android:layout_height="52dp"
        android:layout_gravity="start"
        android:backgroundTint="#3949AB"
        android:enabled="false"
        android:text="@string/action_register_short"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />

    <EditText
        android:id="@+id/userCliente"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:autofillHints="@string/prompt_email"
        android:hint="@string/nameUsuario"
        android:inputType="textEmailAddress"
        android:minHeight="40dp"
        android:selectAllOnFocus="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idCliente"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <EditText
        android:id="@+id/idCliente"
        android:layout_width="315dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="31dp"
        android:autofillHints="@string/prompt_email"
        android:hint="@string/id"
        android:inputType="text"
        android:minHeight="40dp"
        android:selectAllOnFocus="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spid_cliente"
        tools:ignore="TouchTargetSizeCheck" />

    <Spinner
        android:id="@+id/spid_cliente"
        android:layout_width="224dp"
        android:layout_height="65dp"
        android:layout_marginTop="18dp"
        android:entries="@array/id_type_array"
        app:layout_constraintStart_toEndOf="@+id/txtIdType2"
        app:layout_constraintTop_toBottomOf="@+id/apeCliente"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/passwordCliente"
        android:layout_width="316dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:autofillHints="@string/prompt_password"
        android:hint="@string/prompt_password"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:minHeight="40dp"
        android:selectAllOnFocus="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userCliente"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

    <TextView
        android:id="@+id/txtIdType2"
        android:layout_width="127dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="40dp"
        android:text="@string/txtIdType"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/idCliente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spid_cliente"
        app:layout_constraintVertical_bias="0.852" />

    <EditText
        android:id="@+id/apeCliente"
        android:layout_width="305dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="32dp"
        android:autofillHints="@string/prompt_email"
        android:hint="@string/last_name"
        android:inputType="textPersonName"
        android:minHeight="40dp"
        android:selectAllOnFocus="true"
        app:layout_constraintBottom_toTopOf="@+id/spid_cliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomCliente"
        tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>